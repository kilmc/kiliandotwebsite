---
title: Posts
permalink: posts/
layout: base.njk
eleventyExcludeFromCollections: true
---

<h2>{{title}}</h2>
<ul class="post-index">
  {%- for post in collections.post | reverse %}
  <li class="post-index__item mb1">
    <a href="{{post.url}}">{{post.data.title}}</a>
    <date>{{post.date.toLocaleDateString(undefined,{ year: 'numeric', month: 'long', day: 'numeric' })}}</date>
  </li>
  {% endfor %}
</ul>

